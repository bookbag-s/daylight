{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",
        "moduleResolution": "Node",
        "jsx": "react",
        "lib": ["DOM"],
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@pages/*":["src/pages/*"],
            "@components": ["src/components"],
            "@utils":["src/utils"],
            "@hooks":["src/hooks"]
        }
    },
    "include": ["./src/**/*"]
}